    {
      "cell_type": "code",
      "metadata": {},
      "source": [
        "def build_Gram(X):\n",
        "        \"\"\"\n",
        "        Construction of the Gram matrix.\n",
        "        \"\"\"\n",
        "        n = X.shape[0]\n",
        "        G = np.zeros((n, n))\n",
        "        for i in range(n):\n",
        "            for j in range(i, n):\n",
        "                G[i, j] = np.linalg.norm(X[i] - X[j])\n",
        "        G = G + G.T    \n",
        "        return G"
      ],
      "id": "654dfbfe",
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "metadata": {},
      "source": [
        "G = build_Gram(X)\n",
